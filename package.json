{
	"name": "react-ui-lib",
	"homepage": "https://naiduprakash.github.io/react-ui-lib",
	"version": "1.0.0",
	"description": "A components library",
	"main": "index.js",
	"scripts": {
		"start": "start-storybook --no-manager-cache -p 9001 -c .storybook",
		"clean": "rimraf dist && rimraf package-lock.json && rimraf node_modules",
		"prebuild": "npm install --legacy-peer-deps",
		"build": "npm run build:components && npm run build:storybook",
		"build:components": "lerna exec npm run \"build\"",
		"build:storybook": "build-storybook -o docs",
		"publish": "lerna publish --yes",
		"bootstrap": "lerna bootstrap",
		"test": "echo \"Error: no test specified\" && exit 1",
		"deploy": "gh-pages -d docs"
	},
	"author": "Prakash Naidu",
	"devDependencies": {
		"@babel/core": "^7.17.5",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-react": "^7.16.7",
		"@storybook/addon-actions": "^6.4.19",
		"@storybook/addon-essentials": "^6.4.19",
		"@storybook/addon-interactions": "^6.4.19",
		"@storybook/addon-links": "^6.4.19",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/builder-webpack5": "^6.4.19",
		"@storybook/manager-webpack5": "^6.4.19",
		"@storybook/react": "^6.4.19",
		"@storybook/testing-library": "^0.0.9",
		"autoprefixer": "^10.4.2",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.3",
		"clsx": "^1.1.1",
		"cross-env": "^7.0.3",
		"css-loader": "^6.6.0",
		"eslint": "^8.10.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-react-app": "^7.0.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-loader": "^4.0.2",
		"eslint-plugin-flowtype": "^8.0.3",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.29.3",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-standard": "^5.0.0",
		"gh-pages": "^3.2.3",
		"lerna": "^4.0.0",
		"node-sass": "^7.0.1",
		"postcss": "^8.4.8",
		"postcss-loader": "^6.2.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rimraf": "^3.0.2",
		"sass-loader": "^12.6.0",
		"style-loader": "^3.3.1",
		"tailwindcss": "^3.0.23",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"peerDependencies": {
		"react": ">=17.0.2",
		"react-dom": ">=17.0.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"tailwind-merge": "^1.2.0"
	}
